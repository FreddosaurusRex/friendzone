var user = mongoose.model('user', UserSchema)
//functions
app.get('/password', function(req,res){
  var temp =  user.findOne({'UserName': UserName});
  var url_parts = url.query(req.url, true);
  var query = url_parts.query;

  if(query.password != temp.password){
    var match = false;
  }else{
    var match = true;
  }
  res.send(match);
});
app.get('/username',function(req,res){
  var temp = user.findOne({'UserName', UserName});
  var url_parts = url.query(req.url, true);
  var query = url_parts(req.url, true);

  if(query.UserName == temp.UserName){
    res.send(true);
  }else{
    res.send(false);
  }
});
